# ============================================
# SillyTavern Character Generator Configuration
# ============================================
# Copy this file to .env and customize the values

# ============================================
# Server Configuration
# ============================================
# Port for the frontend web interface (default: 2427)
FRONTEND_PORT=2427

# Port for the backend proxy server (default: 2426)
PROXY_PORT=2426

# Frontend URL for CORS and API headers (auto-generated if not set)
# FRONTEND_URL=http://localhost:2427

# ============================================
# Docker Configuration
# ============================================
# Docker network name
NETWORK_NAME=character-generator-network

# Container names
FRONTEND_CONTAINER_NAME=character-generator-frontend
PROXY_CONTAINER_NAME=character-generator-proxy

# ============================================
# Development Settings
# ============================================
# Environment mode (development/production)
NODE_ENV=development

# Enable debug logging
DEBUG=false

# ============================================
# API Configuration
# ============================================
# These are configured through the web interface
# You can set defaults here if needed

# Text API Settings
# TEXT_API_URL=https://api.openai.com/v1
# TEXT_API_MODEL=gpt-3.5-turbo

# Image API Settings
# IMAGE_API_URL=https://api.openai.com/v1
# IMAGE_API_MODEL=dall-e-3

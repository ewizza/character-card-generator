{
  "name": "sillytavern-character-generator",
  "version": "1.0.0",
  "description": "A web app for generating SillyTavern character cards with AI",
  "main": "index.html",
  "scripts": {
    "start": "concurrently \"npm run server\" \"npm run frontend\"",
    "server": "cd proxy && npm install && npm start",
    "frontend": "npx http-server . -p ${FRONTEND_PORT:-2427} -c-1",
    "dev": "concurrently \"npm run server\" \"npm run dev-frontend\"",
    "dev-frontend": "npx http-server . -p ${FRONTEND_PORT:-2427} -c-1 -o",
    "build": "echo 'No build process needed for this static site'",
    "serve": "python -m http.server ${FRONTEND_PORT:-2427}"
  },
  "keywords": [
    "sillytavern",
    "character-generator",
    "ai",
    "character-cards",
    "web-app"
  ],
  "author": "Character Generator App",
  "license": "MIT",
  "devDependencies": {
    "http-server": "^14.1.1",
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/character-generator.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/character-generator/issues"
  },
  "homepage": "https://github.com/yourusername/character-generator#readme"
}
